<% layout('layouts/boilerplate.ejs') %>

<h1><%= camp.title %> Campground</h1>
<h2><%= camp.location %></h2>
<div class="w-50">
	<img class="img-fluid" src="<%= camp.image %>" alt="" />
</div>
<p><%= camp.description %></p>
<p>Price: $<%= camp.price %></p>
<a href="/campgrounds/<%= camp._id %>/edit ">Edit</a>
<div class="mt-3">
	<form action="/campgrounds/<%= camp._id %>?_method=DELETE" method="post">
		<button>Delete</button>
	</form>
</div>

<br />
<a href="/campgrounds">See all campgrounds</a>
